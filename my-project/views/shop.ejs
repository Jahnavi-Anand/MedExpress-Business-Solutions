    <script>
    document.addEventListener("DOMContentLoaded", function() {
    // Add event listener to add-to-cart buttons
    var addToCartButtons = document.querySelectorAll('.add-to-cart');
    addToCartButtons.forEach(function(button) {
        button.addEventListener('click', function(event) {
            event.preventDefault();
            // Extract product information
            var productId = button.parentElement.querySelector('img').getAttribute('data-product-id');
            var productName = button.parentElement.querySelector('.des span').textContent;
            var productPrice = parseFloat(button.parentElement.querySelector('.des h4').textContent.split('₹')[1]);
            var quantity = 1; // You can allow users to choose quantity if needed
            // Send request to backend to add item to cart
            addToCart(productId, productName, productPrice, quantity);
        });
    });

    // Function to send request to backend to add item to cart
    function addToCart(productId, productName, productPrice, quantity) {
        // Send AJAX request to backend
        // Example using fetch API
        fetch('/add-to-cart', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({
                productId: productId,
                productName: productName,
                productPrice: productPrice,
                quantity: quantity
            })
        })
        .then(response => {
            if (response.ok) {
                console.log('Item added to cart successfully');
                // Handle success (e.g., display a success message)
            } else {
                console.error('Failed to add item to cart');
                // Handle failure (e.g., display an error message)
            }
        })
        .catch(error => {
            console.error('Error adding item to cart:', error);
        });
    }
});
